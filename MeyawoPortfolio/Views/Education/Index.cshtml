﻿@model List<MeyawoPortfolio.Models.TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Eğitim Hayatı Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>EğitimID</th>
        <th>İlkOkul</th>
        <th>Lise</th>
        <th>Üniversite</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)  
    {
        <tr>
            <td>@item.EgıtımID</td>
            <td>@item.IlkOkul</td>
            <td>@item.Lise</td>
            <td>@item.Universite</td>
            <td><a href="/Education/DeleteEducation/@item.EgıtımID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Education/UpdateEducation/@item.EgıtımID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Education/CreateEducation/" class="btn btn-primary">Yeni Eğitim Hayatı Ekle</a>




